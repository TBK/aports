# Contributor: TBK <alpine@jjtc.eu>
# Maintainer:
pkgname=py3-rq
_pkgname=${pkgname#py3-}
pkgver=1.0
pkgrel=0
pkgdesc="RQ (Redis Queue) is a library for queueing jobs and processing them in the background with workers."
url="https://python-rq.org/"
arch="noarch"
license="BSD-2-Clause"
options="!check" # Requires running redis server
depends="py3-click py3-redis"
makedepends="py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://github.com/rq/rq/archive/v$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	python3 setup.py --quiet build
}

package() {
	python3 setup.py --quiet install --prefix=/usr --root="$pkgdir"
}

sha512sums="aa6d773a454f767a2b1b09b4f58808c042cabbedf850f6fbf6a7db8cc9d91f9309e98dfb5be33c1c43522ae7426bac7fa9c238e008e7c6967eae393c7d83a0f5  py3-rq-1.0.tar.gz"
