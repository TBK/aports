# Contributor: TBK <tbk@jjtc.eu>
pkgname=py3-zeyple
pkgver=1.2.0
pkgrel=0
pkgdesc="Zeyple automatically encrypts outgoing emails with GPG"
url="https://infertux.com/labs/zeyple/"
arch="noarch"
license="GPL2"
depends="python3 postfix gnupg pygpgme"
makedepends="python3-dev py-setuptools"
subpackages=""
source="zeyple-${pkgver}.tar.gz::https://github.com/infertux/zeyple/archive/$pkgver.tar.gz
        setup.py"
builddir="$srcdir"/zeyple-$pkgver

prepare() {
	cp "$srcdir"/setup.py "$builddir"/
}

build() {
	cd "$builddir"/zeyple
	python3 setup.py build
}

check() {
	cd "$builddir"/tests
	python3 test_zeyple.py
}

package() {
	cd "$builddir"/zeyple
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="3b0837e11f22733e0fbef93dc6aeabd0e2d3d59b6c35a6f7b29b86506a5842bcbffb3e889864d6e14c1e53dd306354690a699257fe60f36ce1d4455ab52b5df7  zeyple-1.2.0.tar.gz
b4fa76011fb96ba9521bb09d1a5c43dbd457c50bb2c6d66a5bc65928cde1e1d8174e43ad86f8f53755f222127cc5b0084b4564c248ce1fca56f9acfb4c03d86d  setup.py"
